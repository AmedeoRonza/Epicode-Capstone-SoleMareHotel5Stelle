@model IEnumerable<Albergo.Models.Galleria>

@{
    ViewBag.Title = "Galleria";
}

<div class="container">
    <h1 style="text-align:center">Le Nostre Stanze</h1>
    <br />
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-10 mb-4 mx-auto">
                <div class="card">
                    <div id="carousel-@(item.IdGalleria)" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="@Url.Content(item.Img1)" alt="Immagine 1">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="@Url.Content(item.Img2)" alt="Immagine 2">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="@Url.Content(item.Img3)" alt="Immagine 3">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carousel-@(item.IdGalleria)" role="button" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carousel-@(item.IdGalleria)" role="button" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </a>
                    </div>
                    <div class="card-body">
                        <h2 class="card-title"><strong>@item.TipoStanza</strong></h2>
                        <h3 class="card-text">@item.Descrizione</h3>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
