@model IEnumerable<Albergo.Models.Servizi>

@{
    ViewBag.Title = "Index";
}
@Styles.Render("~/Content/css")

<h2 style="margin-top:2rem;">Lista Servizi</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descrizione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezzo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descrizione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezzo)
            </td>
            @if (User.IsInRole("Admin"))
            {
                <td>
                    @Html.ActionLink("Modifica", "Edit", new { id = item.IdServizio }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdServizio }, new { @class = "btn btn-danger ml-1" })
                </td>
            }
        </tr>
    }

</table>
